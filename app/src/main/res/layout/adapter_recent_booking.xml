<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <com.imakancustomer.utils.CustomerTextViewBold
            android:id="@+id/tv_rb_provider_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            tools:text="Coco Steamboat"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12ssp" />

        <com.imakancustomer.utils.CustomerTextViewBold
            android:id="@+id/tv_rb_booking_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="end"
            tools:text="Oct 20,02:00PM"
            android:textColor="@color/colorGray2"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

    <com.imakancustomer.utils.CustomerTextViewBold
        android:id="@+id/tv_rb_booking_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Order #B1000560"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_11ssp" />

    <com.imakancustomer.utils.CustomerTextViewBold
        android:id="@+id/tv_rb_booking_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Oven baked lemon duck"
        android:textColor="@color/colorGray2"
        android:textSize="@dimen/_11ssp" />


</LinearLayout>