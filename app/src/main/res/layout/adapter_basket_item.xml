<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:weightSum="100">

        <!--ITEM NAME AND PRICE-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="60">

            <com.imakancustomer.utils.CustomerTextViewRegular
                android:id="@+id/tv_bi_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aloo Paratha Aloo Paratha "
                android:textColor="@color/colorGray2"
                android:textSize="@dimen/_10ssp" />

            <com.imakancustomer.utils.CustomerTextViewRegular
                android:id="@+id/tv_bi_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@id/tv_bi_item_name"
                android:text="(RM10.00)"
                android:textColor="@color/colorGray2"
                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>

        <!--ITEM QUANTITY -->
        <com.imakancustomer.utils.CustomerTextViewRegular
            android:id="@+id/tv_bi_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:drawableStart="@drawable/ic_close"
            android:text="1"
            android:textColor="@color/colorGray2"
            android:textSize="@dimen/_10ssp" />
        <!--ITEM TOTAL PRICE PER ITEM -->
        <com.imakancustomer.utils.CustomerTextViewBold
            android:id="@+id/tv_bi_item_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="RM 35.00"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10ssp" />
        <!--ITEM DELETE -->
        <ImageView
            android:id="@+id/tv_bi_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:src="@drawable/delete" />
    </LinearLayout>

</RelativeLayout>